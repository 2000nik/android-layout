<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/water"/>

        <TextView
            android:id="@+id/birthday_message"
            android:text="Happy Birthday, Kristine!"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="36sp"
            android:fontFamily="sans-serif-light"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:padding="20dp"/>

        <TextView
            android:id="@+id/from_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center_horizontal"
            android:text="Love, Katherine"
            android:textSize="36sp"
            android:fontFamily="sans-serif-light"
            android:textColor="@android:color/white"
            android:padding="20dp"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/photo"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:layout_above="@+id/from_message"
            android:src="@drawable/xmas"
            android:padding="50dp"
            android:visibility="gone"/>

    </RelativeLayout>

    <Button
        android:id="@+id/guess_who_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="?android:attr/borderlessButtonStyle"
        android:text="Guess who?"
        android:textSize="20sp"
        android:textColor="#ff2773b2"
        android:padding="20dp"/>
</LinearLayout>